<h1>Sessions#new</h1>
<p>Find me in app/views/sessions/new.html.erb</p>

<div class="container mt-5">
  <div class="form-div">
        <h2 class="primary-font-color">Sign up</h2>
        <%= form_with(url: login_path, scope: :session, local: true) do |f|%>
            <div class="form-group">
            <%= f.label :username, class: "primary-font-color" %><br />
            <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
            </div>

            <div class="form-group">
            <%= f.submit "Log In", class: "btn", id: "login-button" %>
            </div>
        <% end %>
  </div>
</div>
