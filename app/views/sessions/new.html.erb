<div class="container mt-5">
  <div class="form-div bg-dark">
        <h2 class="primary-font-color">Log In</h2>
        <%= form_with(url: login_path, scope: :session, local: true, class: "bg-dark") do |f|%>
            <div class="danger">
                <%= flash[:error] %>
            </div>
            <div class="form-group">
            <%= f.label :username, class: "primary-font-color" %><br />
            <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
            </div>

            <div class="form-group">
            <%= f.submit "Log In", class: "btn", id: "login-button" %>
            </div>
        <% end %>
  </div>
</div>
